<main role="main">
    <div class="album py-3 bg-light">
        <div class="container"> 
            <div class="row">
                <div class="col-md-10" style="border-right:1px solid #e9ecef;">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item bc-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item bc-item"><a href="/projects">Projects</a></li>
                            <li class="breadcrumb-item" aria-current="page">{{ project.name }}</li>
                        </ol>
                    </nav>

                    <h1 class="display-3">{{ project.name }} </h1>
                    <br>
                    <p class="lead">{{ project.description }}</p>
                    <br>
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {{#each project.imageSliders}}
                                <div class="carousel-item {{#if @first}}active{{/if}}">
                                    <img class="d-block w-100" src="/projects/{{../project.alias}}/images/slides/{{ this }}" alt="Slide {{@index}}">
                                </div>
                            {{/each}}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <br>
                    <h2>Watch a live demo <a class="bc-item" href="/projects/{{project.alias}}/demo">here</a></h2>
                </div>
                <div class="col-md-2">
                    <div>
                        <h2>Links</h2>
                        <br>
                        <a href="/projects/{{project.alias}}/demo" class="btn btn-primary">Live Demo</a>
                        <br><br>
                        <a href="{{ project.githubUrl }}" class="btn btn-secondary">Github Link</a>
                        <br><br>
                        <hr>
                        <br>
                        <h2>Tags</h2>
                        <br>
                        {{#each project.tags}}
                            <span class="badge badge-{{class}}">{{name}}</span>
                        {{/each}}<br><br>
                        <hr>
                        <br>
                        <h2>Related Projects</h2>
                        <br>
                        {{#each project.relatedProjects}}
                            <div style="padding: 10px 1px;">
                                <a href="/projects/{{link}}" class="bc-item">{{name}}</a>
                            </div>
                        {{/each}}
                        <hr>
                        <br>
                        <h2>Resources</h2>
                        <br>
                        {{#each project.relatedProjects}}
                            <div style="padding: 10px 1px;">
                                <a href="/projects/{{link}}" class="bc-item">{{name}}</a>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>